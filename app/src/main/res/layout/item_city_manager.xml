<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="#1296db"
    app:cardElevation="8dp"
    app:contentPadding="8dp">

    <ImageButton
        android:id="@+id/item_delete"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="top|end"
        android:contentDescription="图片描述"
        android:background="#00000000"
        android:paddingLeft="40dp"
        android:paddingBottom="40dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@android:drawable/ic_delete" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_im_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="图片描述"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/forecast_cloud" />

        <TextView
            android:id="@+id/item_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/item_tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/item_tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

</android.support.v7.widget.CardView>
